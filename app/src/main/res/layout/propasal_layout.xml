<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="13dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/proposalPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/proposaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Orlando Diggs"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/statusUserEmailTxt"
            app:layout_constraintStart_toEndOf="@+id/proposalPic"
            app:layout_constraintTop_toTopOf="@+id/proposalPic" />

        <TextView
            android:id="@+id/statusUserEmailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ramonridwan@123"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/proposalPic"
            app:layout_constraintStart_toStartOf="@+id/proposaName"
            app:layout_constraintTop_toBottomOf="@+id/proposaName" />

        <ImageView
            android:id="@+id/statususerbugdeticon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/proposalPic"
            app:layout_constraintStart_toStartOf="@+id/proposalPic"
            app:layout_constraintTop_toBottomOf="@+id/proposalPic"
            app:srcCompat="@drawable/ic_statususerprice" />

        <TextView
            android:id="@+id/statususerbudgetTview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="1500$"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/statususerbugdeticon"
            app:layout_constraintStart_toEndOf="@+id/statususerbugdeticon"
            app:layout_constraintTop_toTopOf="@+id/statususerbugdeticon" />

        <ImageView
            android:id="@+id/statususertimeicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/statususerbugdeticon"
            app:layout_constraintTop_toBottomOf="@+id/statususerbugdeticon"
            app:srcCompat="@drawable/ic_statususerdate" />

        <TextView
            android:id="@+id/statususertimeTview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="8 days"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/statususertimeicon"
            app:layout_constraintStart_toStartOf="@+id/statususerbudgetTview"
            app:layout_constraintTop_toTopOf="@+id/statususertimeicon" />

        <TextView
            android:id="@+id/makeAnofferBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/activebtn_bg"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Make an Offer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/statususertimeicon"
            app:layout_constraintEnd_toStartOf="@+id/statusUserDetailsBtn"
            app:layout_constraintTop_toTopOf="@+id/statususertimeicon" />

        <TextView
            android:id="@+id/statusUserDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/completedbtn_bg"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="Details.."
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/makeAnofferBtn"
            app:layout_constraintEnd_toStartOf="@+id/statusUserChatBtn"
            app:layout_constraintTop_toTopOf="@+id/makeAnofferBtn" />

        <ImageView
            android:id="@+id/statusUserChatBtn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="16dp"
            android:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/statusUserDetailsBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/statusUserDetailsBtn"
            app:srcCompat="@drawable/ic_chat" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/green">

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


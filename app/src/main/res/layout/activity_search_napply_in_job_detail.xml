                android:textColor="#524B6B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView67Instant"
                app:layout_constraintTop_toBottomOf="@+id/textView67Instant" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans"
                android:text="Skills and Expertise"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/descriptiontextInstant"
                app:layout_constraintTop_toBottomOf="@+id/descriptiontextInstant" />

            <LinearLayout
                android:id="@+id/linearLayout19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView38">

                <ListView
                    android:id="@+id/injobdetailsListInstant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="5dp"
                    android:divider="@null"
                    android:dividerHeight="1dp"

                    android:visibility="visible"
                    tools:listitem="@layout/layoutinjobdetailskill" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/injoblistloaderInstant"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/listloading" />

                <TextView
                    android:id="@+id/injoblistloadingTvInstant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_bold"
                    android:gravity="center"
                    android:text="Loading.."
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:visibility="gone" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans"
                android:text="Position"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView38"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout19" />

            <TextView
                android:id="@+id/positionTViewInstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/dm_sans"
                android:text="TextView"
                android:textColor="#524B6B"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView51"
                app:layout_constraintTop_toBottomOf="@+id/textView51" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ApplyJobBTnInstant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jobChatBtnInstant"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView74Instant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dm_sans_bold"
            android:padding="10dp"
            android:text="Apply Now"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jobChatBtnInstant"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/ApplyJobBTnInstant"
        app:layout_constraintEnd_toStartOf="@+id/jobBookmarkBTnInstant"
        app:layout_constraintTop_toTopOf="@+id/ApplyJobBTnInstant">

        <ImageView
            android:id="@+id/imageView18Instant"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/ic_chat" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/jobBookmarkBTnInstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/jobChatBtnInstant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jobChatBtnInstant"
        app:srcCompat="@drawable/ic_bookmark_green_border" />


</androidx.constraintlayout.widget.ConstraintLayout>



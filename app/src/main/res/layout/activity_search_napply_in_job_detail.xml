    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="@color/colorSeparator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/injobDetailBack">

        <TextView
            android:id="@+id/job_titleInstant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/dm_sans"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/com_textInstant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="TextView"
            android:maxLength="13"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view9Instant"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_titleInstant" />

        <View
            android:id="@+id/view9Instant"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/viewblackdot"
            app:layout_constraintBottom_toBottomOf="@+id/com_textInstant"
            app:layout_constraintEnd_toStartOf="@+id/budgetTextInstant"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/com_textInstant"
            app:layout_constraintTop_toTopOf="@+id/com_textInstant" />

        <TextView
            android:id="@+id/budgetTextInstant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="$1000"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLength="6"
            app:layout_constraintBottom_toBottomOf="@+id/com_textInstant"
            app:layout_constraintEnd_toStartOf="@+id/view10Instant"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view9Instant"
            app:layout_constraintTop_toTopOf="@+id/com_textInstant" />

        <View
            android:id="@+id/view10Instant"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/viewblackdot"
            app:layout_constraintBottom_toBottomOf="@+id/budgetTextInstant"
            app:layout_constraintEnd_toStartOf="@+id/time_textInstant"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/budgetTextInstant"
            app:layout_constraintTop_toTopOf="@+id/budgetTextInstant" />

        <TextView
            android:id="@+id/time_textInstant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:text="29-3-2023 11:34:07"
            android:textColor="@color/black"
            android:maxLength="15"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/budgetTextInstant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/view10Instant"
            app:layout_constraintTop_toTopOf="@+id/budgetTextInstant" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/com_logoInstant"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:background="@drawable/njobpic_bg"
        android:padding="10dp"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout444" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout444">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/textView67Instant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans"
                android:text="Job Description"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/descriptiontextInstant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:lineSpacingExtra="4dp"
                android:padding="2dp"

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet_employment"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:fontFamily="@font/dm_sans"
        android:text="Choose Job Type"
        android:textColor="#150B3D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dm_sans"
        android:gravity="center"
        android:text="Determine and choose the type of work according to what you want"
        android:textColor="#524B6B"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView41"
        app:layout_constraintStart_toStartOf="@+id/textView41"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42">

        <RadioButton
            android:id="@+id/fulltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Full time"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />



        <RadioButton
            android:id="@+id/partTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Part Time"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Contract"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/temporary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Temporary"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Volunteer"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/apprenticeship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/dm_sans"
            android:layoutDirection="rtl"
            android:text="Apprenticeship"
            android:layout_margin="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp"/>


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
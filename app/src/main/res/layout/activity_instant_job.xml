<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivities.InstantJobActivity">

    <ImageView
        android:id="@+id/ic_bckinstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/postbtninstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/dm_sans"
        android:padding="5dp"
        android:text="Post"
        android:textColor="#FF9228"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ic_bckinstant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ic_bckinstant" />

    <TextView
        android:id="@+id/addPostinstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans"
        android:text="Post New Job"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_bckinstant" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userpictureinstant"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profileplace"
        app:layout_constraintStart_toStartOf="@+id/addPostinstant"
        app:layout_constraintTop_toBottomOf="@+id/addPostinstant" />

    <TextView
        android:id="@+id/usernameinstant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dm_sans"
        android:text="Orlando Diggs"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/userpictureinstant"
        app:layout_constraintTop_toTopOf="@+id/userpictureinstant" />

    <TextView
        android:id="@+id/useraddressinstant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/dm_sans"
        android:text="California, USA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/usernameinstant"
        app:layout_constraintStart_toStartOf="@+id/usernameinstant"
        app:layout_constraintTop_toBottomOf="@+id/usernameinstant" />

    <TextView
        android:id="@+id/textView22instant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans"
        android:text="Job Title"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/userpictureinstant"
        app:layout_constraintTop_toBottomOf="@+id/userpictureinstant" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPostTitleinstant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView22instant"
        app:layout_constraintTop_toBottomOf="@+id/textView22instant">


        <EditText
            android:id="@+id/etPostTitleinstant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/postbg"
            android:ems="10"
            android:hint="Write the title of your post here"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView23instant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans"
        android:text="Description"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/cardPostTitleinstant"
        app:layout_constraintTop_toBottomOf="@+id/cardPostTitleinstant" />

    <TextView
        android:id="@+id/textView23instant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dm_sans"
        android:text="Upload Logo"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/cardView10"
        app:layout_constraintTop_toBottomOf="@+id/cardView10" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_circle"
        android:padding="20dp"
        android:src="@drawable/ic_upload"
        app:layout_constraintEnd_toEndOf="@+id/cardView10"
        app:layout_constraintStart_toStartOf="@+id/cardView10"
        app:layout_constraintTop_toBottomOf="@+id/textView23instant2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView10"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cardPostTitleinstant"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardPostTitleinstant"
        app:layout_constraintTop_toBottomOf="@+id/textView23instant">

        <EditText
            android:id="@+id/etDescriptioninstant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/postbg"
            android:ems="10"
            android:gravity="top"
            android:hint="What do you want to talk about?"
            android:inputType="textMultiLine|textPersonName"
            android:maxLines="6"
            android:padding="10dp"
            android:textAlignment="textStart" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCamerainstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="8dp"
                android:layout_weight="0.3"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_camera" />

            <ImageView
                android:id="@+id/imgGalleryinstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="8dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCamerainstant"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_picture" />

            <TextView
                android:id="@+id/hashtagidinstant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/open_sans"
                android:padding="5dp"
                android:text="Add hashtag"
                android:textColor="@color/green"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
